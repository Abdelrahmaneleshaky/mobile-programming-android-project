<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3">

    <ImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:src="@drawable/share">

    </ImageButton>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookmark"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        >

    </ImageButton>

    <ImageButton
        android:id="@+id/arrowcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:src="@drawable/arrow">

    </ImageButton>

    <ImageView
        android:id="@+id/asusimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/items"
        android:padding="20dp"
        android:src="@drawable/pic1">

    </ImageView>

    <TextView
        android:id="@+id/item1name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asusimg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="asus laptop"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"

        >

    </TextView>

    <ImageButton
        android:id="@+id/addquantity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/asusimg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/plus" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asusimg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/addquantity"
        android:text="0"
        android:textSize="28sp"
        android:textStyle="bold" />


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/subquantity"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/asusimg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/quantity"
        android:background="@drawable/minus"/>

    <TextView
        android:id="@+id/itemPrice"
        android:layout_below="@+id/asusimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000$"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="300dp"

        >

    </TextView>

    <View
        android:layout_below="@+id/asusimg"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_marginTop="100dp"
        >

    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this item"
        android:layout_below="@+id/asusimg"
        android:layout_marginTop="120dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technical Specifications
Processor : AMD Ryzen 7 5800H Mobile Processor (8-core/16-thread, up to 4.4 GHz max boost) / RAM memory : Built-in 8GB DDR4 â€“ Maximum RAM memory: 16GB
Storage : 1TB M.2 NVMe PCIe 3.0 SSD / Display : 16.0 inch, WUXGA (1920 x 1200) 16:10, 60Hz refresh rate, 300nits, NTSC: 45%, Anti-Reflection, (Screen-to-body ratio)86%
Video Card : AMD Radeon Graphics / Color : Transparent silver/ Battery : 50WHr, 3S1P, 3 Li-ion cells/
I/O ports : 1 x USB 2.0 Type-A1 x USB 3.2 Gen 1 Type-C2 x USB 3.2 Gen 1 Type-A1 x HDMI 1.41x 3.5mm Combo Audio Jack1x DC-in"
        android:layout_below="@+id/asusimg"
        android:layout_marginTop="150dp"
        >

    </TextView>

    <Button
        android:id="@+id/addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asusimg"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#3F51B5"
        android:text="Add to cart"
        android:textColor="@android:color/white"
        android:textStyle="bold" />





</RelativeLayout>